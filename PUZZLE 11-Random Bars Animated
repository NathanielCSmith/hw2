int numberOfBars=20;
  void setup() {
  size(800,800);
  noStroke();
  background(0);
  frameRate(10);
 }

void draw() {
  if (numberOfBars < width) {
    fill(0);
    rect(numberOfBars,0,5,height);
    fill(255);
    rect(numberOfBars,random(height), 5, height);
    numberOfBars += 20;
    }else{
    numberOfBars=20;
  }
}

